script_content = """\
# Import necessary libraries
pip install prophet

import pandas as pd

# Read the dataset
df = pd.read_csv('/content/Dataset- Superstore (2015-2018) (2).csv')

# Display category value counts
df['Category'].value_counts()

# Filter data for Office Supplies
OS = df.loc[df['Category'] == 'Office Supplies']
OS.head(5)

# Display the starting and ending dates
print('Starting date:', OS['Order Date'].min())
print('Ending date:', OS['Order Date'].max())

# Drop irrelevant variables
cols = ['Row ID', 'Order ID', 'Ship Date', 'Ship Mode', 'Customer ID', 'Customer Name', 'Segment', \
        'Country', 'City', 'State', 'Postal Code', 'Region', 'Product ID', 'Category']
"""

# Save the script to a file
output_path = '/mnt/data/demand_forecast.py'
with open(output_path, 'w', encoding='utf-8') as script_file:
    script_file.write(script_content)

output_path
